  "JILI ‚Äì Pharaoh's Treasure ‚Ä¢ Short trailer",
  "PG Soft ‚Äì Dreams of Macau ‚Ä¢ Lux vibe",
  "JILI ‚Äì Bao Boon Chin ‚Ä¢ Tutorial",
  "PG Soft ‚Äì Candy Burst ‚Ä¢ Fun & bright",
  "JILI ‚Äì Mega Ace ‚Ä¢ Quick promo",
  "PG Soft ‚Äì Reel Love ‚Ä¢ Visual storytelling",
  "JILI ‚Äì Phantom Thief ‚Ä¢ Cinematic",
  "PG Soft ‚Äì Ganesha Fortune ‚Ä¢ Focus",
  "JILI ‚Äì Win Drop ‚Ä¢ Feature",
  "PG Soft ‚Äì Symbols of Egypt ‚Ä¢ Short",
  "JILI ‚Äì Charge Buffalo ‚Ä¢ Montage",
  "PG Soft ‚Äì Vampire's Charm ‚Ä¢ Mood",
  "JILI ‚Äì Jungle King ‚Ä¢ Highlight",
  "PG Soft ‚Äì Phoenix Rises ‚Ä¢ Trailer",
  "JILI ‚Äì Shanghai Beauty ‚Ä¢ Showcase",
  "CK44 VIP System ‚Ä¢ How it works",
  "Daily Bonus ‚Ä¢ How to claim fast",
  "Community Stories ‚Ä¢ Your luckiest moment"
];

function defaultKeywords(topic){
  const base = ["CK44 Bangladesh","PG Soft","JILI","bonus","VIP","Bangladesh","gaming"];
  return [topic.split("‚Ä¢")[0].trim(), ...base].join(", ");
}

function defaultHashtags(topic){
  const tags = ["#CK44","#Bangladesh","#GamingLife","#PGSoft","#JILI","#Bonus","#Slots","#PlaySmart"];
  return tags.join(" ");
}

function promptUniversal(topic){
  return `Design a CK44 gold‚Äìblue‚Äìpurple visual for: ‚Äú${topic}‚Äù. Clean composition, subtle glow, elegant typography. Add CK44 logo, minimal callout ‚ÄúPlay Now on CK44 Bangladesh‚Äù. 4K export.`;
}

function ctaIdeas(){
  return ["Join Now","Play to Earn","Claim Your Bonus","Spin Today","Try Your Luck"][Math.floor(Math.random()*5)];
}

// ===== Render =====
const root = document.getElementById('root');
function render(){
  root.innerHTML = "";
  for(let d=1; d<=30; d++){
    const topic = DEFAULT_TOPICS[(d-1)%DEFAULT_TOPICS.length];
    const kw = defaultKeywords(topic);
    const details = document.createElement('details');
    details.className = "details";
    const id = `d${d}`;
    details.innerHTML = `
      <summary>
        <div><span class="badge">Day ${d}</span></div>
        <div><strong>${topic}</strong></div>
        <div class="kw">${kw}</div>
        <div>
          <div class="grid-times">
            <span class="time">YT ${BEST_TIMES.youtube.join("/")}</span>
            <span class="time">IG ${BEST_TIMES.instagram.join("/")}</span>
            <span class="time">TT ${BEST_TIMES.tiktok.join("/")}</span>
          </div>
        </div>
        <div class="status"><input type="checkbox" id="${id}-chk"/> <span class="muted">pending</span></div>
      </summary>

      <div class="section">
        <div class="panel">
          <h3>üìù Post Text</h3>
          <div class="row">
            <div><label>Topic / Title</label><input id="${id}-title" type="text" value="${topic}"/></div>
            <div><label>Keywords</label><input id="${id}-kw" type="text" value="${kw}"/></div>
          </div>
          <div class="row">
            <div><label>Hashtags</label><input id="${id}-tags" type="text" value="${defaultHashtags(topic)}"/></div>
            <div><label>CTA</label><input id="${id}-cta" type="text" value="${ctaIdeas()}"/></div>
          </div>
          <div><label>Caption / Post</label><textarea id="${id}-text">Today‚Äôs highlight: ${topic}
Play smart, win smooth ‚Äî CK44 Bangladesh.</textarea></div>
          <div class="copy">
            <button class="btn" onclick="copy('#${id}-text')">Copy Text</button>
            <button class="btn" onclick="copy('#${id}-tags')">Copy Hashtags</button>
            <button class="btn" onclick="copy('#${id}-kw')">Copy Keywords</button>
          </div>
        </div>

        <div class="panel">
          <h3>üé® AI Image Prompt</h3>
          <div class="row">
            <div>
              <label>Universal Prompt</label>
              <textarea id="${id}-prompt">${promptUniversal(topic)}</textarea>
              <div class="copy"><button class="btn" onclick="copy('#${id}-prompt')">Copy Prompt</button></div>
            </div>
            <div>
              <h4>Best Time by Platform (edit if needed)</h4>
              <div class="platforms">
                <span class="tag">YouTube</span><input type="time" id="${id}-yt1" value="${BEST_TIMES.youtube[0]}"/> <input type="time" id="${id}-yt2" value="${BEST_TIMES.youtube[1]}"/>
                <span class="tag">Instagram</span><input type="time" id="${id}-ig1" value="${BEST_TIMES.instagram[0]}"/> <input type="time" id="${id}-ig2" value="${BEST_TIMES.instagram[1]}"/> <input type="time" id="${id}-ig3" value="${BEST_TIMES.instagram[2]}"/>
                <span class="tag">TikTok</span><input type="time" id="${id}-tt1" value="${BEST_TIMES.tiktok[0]}"/> <input type="time" id="${id}-tt2" value="${BEST_TIMES.tiktok[1]}"/> <input type="time" id="${id}-tt3" value="${BEST_TIMES.tiktok[2]}"/>
                <span class="tag">Medium</span><input type="time" id="${id}-md1" value="${BEST_TIMES.medium[0]}"/> <input type="time" id="${id}-md2" value="${BEST_TIMES.medium[1]}"/>
                <span class="tag">X</span><input type="time" id="${id}-tw1" value="${BEST_TIMES.twitter[0]}"/> <input type="time" id="${id}-tw2" value="${BEST_TIMES.twitter[1]}"/> <input type="time" id="${id}-tw3" value="${BEST_TIMES.twitter[2]}"/>
                <span class="tag">LinkedIn</span><input type="time" id="${id}-li1" value="${BEST_TIMES.linkedin[0]}"/> <input type="time" id="${id}-li2" value="${BEST_TIMES.linkedin[1]}"/>
                <span class="tag">Threads</span><input type="time" id="${id}-th1" value="${BEST_TIMES.threads[0]}"/> <input type="time" id="${id}-th2" value="${BEST_TIMES.threads[1]}"/>
                <span class="tag">Reddit</span><input type="time" id="${id}-rd1" value="${BEST_TIMES.reddit[0]}"/> <input type="time" id="${id}-rd2" value="${BEST_TIMES.reddit[1]}"/>
              </div>
            </div>
          </div>
        </div>
      </div>
    `;
    root.appendChild(details);
  }
}
render();

// Search filter
const q = document.getElementById('q');
q.addEventListener('input', ()=>{
  const term = q.value.toLowerCase();
  document.querySelectorAll('.details').forEach(d=>{
    const txt = d.querySelector('summary').innerText.toLowerCase();
    d.style.display = txt.includes(term) ? '' : 'none';
  });
});

// Helpers
function toggleAll(val){
  document.querySelectorAll('.status input[type="checkbox"]').forEach(ch=>{ch.checked = val; ch.parentElement.nextElementSibling && (ch.parentElement.nextElementSibling.textContent = val?'done':'pending');});
}

function exportCSV(){
  const rows = [["Day","Title","Keywords","Hashtags","CTA","Text"]];
  for(let d=1; d<=30; d++){
    const id = `d${d}`;
    const title = val(`${id}-title`);
    const kw = val(`${id}-kw`);
    const tags = val(`${id}-tags`);
    const cta = val(`${id}-cta`);
    const text = val(`${id}-text`).replace(/\n/g,'\\n');
    rows.push([d, title, kw, tags, cta, text]);
  }
  const csv = rows.map(r=>r.map(x=>`"${String(x).replace(/"/g,'""')}"`).join(",")).join("\n");
  download("CK44_Universal_30Day_Planner.csv", csv);
}

function val(id){return document.getElementById(id).value || ""}
function download(name, data){
  const blob = new Blob([data], {{type:"text/csv"}});
  const url = URL.createObjectURL(blob);
  const a = Object.assign(document.createElement('a'), {{href:url, download:name}});
  document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
}

function copy(sel){
  const el = document.querySelector(sel); el.select(); el.setSelectionRange(0,99999); document.execCommand('copy');
  el.style.outline='2px solid var(--cyan)'; setTimeout(()=>el.style.outline='none',600);
}
